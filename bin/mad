#!/usr/bin/env bash

VERSION="0.0.1"

#
# Display <file>
#

display() {
  cat $1 \
    | perl -pe 's|^#+ *(.+)|\e[1m\1\e[0m|g' \
    | perl -pe 's|`(.+?)`|\e[90m\1\e[0m|g' \
    | perl -pe 's|\*\*(.+?)\*\*|\e[1m\1\e[0m|g' \
    | perl -pe 's|__(.+?)__|\e[1m\1\e[0m|g' \
    | perl -pe 's|\*(.+?)\*|\e[4m\1\e[0m|g' \
    | perl -pe 's|_(.+?)_|\e[4m\1\e[0m|g' \
    | perl -pe 's|    (.+)|    \e[90m\1\e[0m|g' \
    | perl -pe 's|^|  |' \
    | less -R
}

#
# Display the usage for mad(1).
#

display_mad_usage() {
  display $(dirname $0)/../share/mad/mad.md
  exit
}

# file required

test $# -eq 0 && display_mad_usage

# parse args

case $1 in
  -v|--version)
    echo $VERSION
    ;;
  -h|--help|help)
    display_mad_usage
    ;;
  *)
    display $1
    ;;
esac